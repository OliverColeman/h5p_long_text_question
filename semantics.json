[
  {
    "name": "media",
    "type": "group",
    "label": "Media",
    "fields": [
      {
        "name": "type",
        "type": "library",
        "label": "Type",
        "options": [
          "H5P.Image 1.0",
          "H5P.Video 1.3"
        ],
        "optional": true,
        "description": "Optional media to display above the question."
      }
    ]
  },
  {
    "label": "Question",
    "name": "text",
    "type": "text",
    "widget": "html",
    "description": "The question for the user.",
    "enterMode": "p",
    "tags": [
      "strong",
      "em",
      "u",
      "del",
      "a",
      "ul",
      "ol",
      "h2",
      "h3",
      "hr"
    ]
  },
  {
    "name": "input",
    "type": "group",
    "label": "User input field",
    "fields": [
      {
        "name": "rows",
        "label": "Input rows",
        "type": "select",
        "description": "Determines the height of the input field.",
        "options": [
          {
            "value": "1",
            "label": "1 line"
          },
          {
            "value": "2",
            "label": "2 lines"
          },
          {
            "value": "5",
            "label": "5 lines"
          },
          {
            "value": "10",
            "label": "10 lines"
          },
          {
            "value": "20",
            "label": "20 lines"
          }
        ],
        "default": "5"
      },
      {
        "name": "placeholderText",
        "label": "Placeholder text",
        "default": "Enter your answer here.",
        "description": "Text that initially will be shown in the input field. Will be removed automatically when the user starts writing.",
        "type": "text",
        "optional": true
      }
    ]
  },
  {
    "name": "submitSave",
    "type": "group",
    "label": "Submission and saving",
    "fields": [
      {
        "label": "Display submit button?",
        "name": "showSubmit",
        "type": "boolean",
        "description": "Whether to display the submit button. The submit button is a way for the user to indicate that they wish to submit the final version of their answer."
      },
      {
        "label": "Submission text",
        "name": "submitText",
        "type": "text",
        "widget": "html",
        "description": "Text to show upon submission.",
        "optional": true,
        "enterMode": "p",
        "tags": [
          "strong",
          "em",
          "u",
          "del",
          "a",
          "ul",
          "ol",
          "h2",
          "h3",
          "hr"
        ]
      },
      {
        "name": "autoSave",
        "label": "Auto save frequency",
        "type": "select",
        "description": "Determines if, when and optionally how long to wait after the user has changed their answer before it is automatically saved. All timed options will auto-save when the user has been editing the answer and then clicked elsewhere on the page. Auto save only works if a third-party system is monitoring xAPI events generated by this library for this purpose.",
        "options": [
          {
            "value": "-1",
            "label": "Never auto save"
          },
          {
            "value": "0",
            "label": "Only on click away from input field"
          },
          {
            "value": "1",
            "label": "1 second"
          },
          {
            "value": "2",
            "label": "2 seconds"
          },
          {
            "value": "3",
            "label": "3 seconds"
          },
          {
            "value": "5",
            "label": "5 seconds"
          },
          {
            "value": "10",
            "label": "10 seconds"
          },
          {
            "value": "30",
            "label": "30 seconds"
          }
        ],
        "default": "-1"
      }
    ]
  },
  {
    "name": "rubric",
    "type": "group",
    "label": "Rubric",
    "fields": [
      {
        "name": "criteria",
        "type": "list",
        "label": "Criteria",
        "entity": "criterion",
        "field": {
          "name": "criterion",
          "type": "group",
          "label": "Criterion",
          "fields": [
            {
              "name": "text",
              "type": "text",
              "widget": "html",
              "label": "Criterion",
              "enterMode": "p",
              "tags": [
                "strong",
                "em",
                "del",
                "u"
              ]
            }, 
            {
              "name": "weight",
              "type": "number",
              "label": "Weight",
              "min": 1,
              "decimals": 0
            }
          ]
        }
      },
      {
        "label": "Display rubric to user?",
        "name": "visibleToUser",
        "type": "boolean",
        "description": "Whether to display the rubric to the user."
      },
      {
        "name": "label",
        "label": "Header text",
        "default": "Rubric",
        "description": "The header text to display above the Rubric. Set to empty for no header.",
        "type": "text",
        "optional": true
      }
    ]
  }
]